<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.0.xsd">
 
 <!-- We can define our beans here -->
 	<bean id="app" class="sm.eclipse.project.App" autowire="byType" init-method="init"/>
 	
 	<bean id="logger" class="sm.eclipse.project.Logger" autowire-candidate="true"/>
 	<bean id="mail" class="sm.eclipse.project.Mail" autowire-candidate="false"/>
 	<bean id="database" class="sm.eclipse.project.Database" autowire-candidate="false"/>

</beans>